@model IEnumerable<WebApplication2.Models.Recipe>

@{
    ViewBag.Title = "Index";

    var Print = ViewBag.Data;
}

<h2 style="text-align:center;">Recipe</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ingredients)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Method)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ingredients)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Method)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>

<h1 style="text-align:center;">Tips</h1>

<table class="table">

    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Tip</th>
    </tr>

    @foreach (var item in Print)
    {
        
     <tr>
        
        <td>@item.Id</td>
        <td>@item.Name</td>
         <td>@item.Tips</td>
    </tr>      
    }


   
</table>
